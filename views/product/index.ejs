<h1>Product List</h1>
<a href="/products/new" class="btn btn-primary">New Product</a>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(function(product) { %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.price %></td>
        <td><a href="/products/<%= product.id %>" class="btn btn-primary">View</a></td>
        <td><a href="/products/<%= product.id %>/edit" class="btn btn-secondary">Edit</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if (current > 1) { %>
      <li class="page-item"><a class="page-link" href="/products?page=<%= current - 1 %>">&laquo;</a></li>
    <% } %>
    <% for (let i = 1; i <= pages; i++) { %>
      <li class="page-item <% if (i === current) { %>active<% } %>"><a class="page-link" href="/products?page=<%= i %>"><%= i %></a></li>
    <% } %>
    <% if (current < pages) { %>
      <li class="page-item"><a class="page-link" href="/products?page=<%= current + 1 %>">&raquo;</a></li>
    <% } %>
  </ul>
</nav>
